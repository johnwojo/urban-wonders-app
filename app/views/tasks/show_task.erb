<h3><%=@task.name.capitalize%></h3>
<p>Description: <%=@task.description.capitalize%></p>
<p>Location: <%=@task.city.name.capitalize%></p>


<% if @task.complete == false %>
<form action="/tasks/<%=@task.id%>/complete">
    <input type="submit" value="Complete Task"/>
</form>
<% end %>

<form method="POST" action="/tasks/<%=@task.id%>/delete">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete Task">
</form>

<form action="/tasks/<%=@task.id%>/edit">
    <input type="submit" value="Edit Task"/>
</form>
